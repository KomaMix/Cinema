@model List<ManageUserRolesViewModel>
@{
    ViewData["Title"] = "Manage User Roles";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Manage">
    <div class="form-group">
        @foreach (var role in Model)
        {
            <input type="hidden" name="userId" value="@role.UserId" />
            <div class="form-check">
                <input type="checkbox" class="form-check-input" asp-for="@role.Selected" />
                <label class="form-check-label" asp-for="@role.Selected">@role.RoleName</label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>